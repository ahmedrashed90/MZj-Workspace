rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    // Admins by email (hardcoded)
    function isAdmin() {
      return signedIn() && request.auth.token.email in [
        "hossamzayan10@gmail.com",
        "an9036663@gmail.com",
        "mr.ahmed_rashed@outlook.sa"
      ];
    }

    // Users collection (optional)
    match /users/{userId} {
      allow read: if signedIn() && (isAdmin() || request.auth.uid == userId);
      allow create: if signedIn() && (isAdmin() || request.auth.uid == userId);
      allow update, delete: if isAdmin() || (signedIn() && request.auth.uid == userId);
    }

    // Unique Spec Keys source
    match /media_specs/{docId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    // Boards
    match /agendas/{id} {
      allow read: if signedIn();
      allow create, update, delete: if isAdmin();
    }

    match /campaigns/{id} {
      allow read: if signedIn();
      allow create, update, delete: if isAdmin();
    }

    // Tasks
    match /tasks/{taskId} {
      allow read: if signedIn();

      // create: admin OR user creates task assigned to himself
      allow create: if signedIn() && (
        isAdmin() ||
        request.resource.data.userId == request.auth.uid
      );

      // update: admin OR assigned user
      allow update: if signedIn() && (
        isAdmin() ||
        resource.data.userId == request.auth.uid
      );

      // delete: admin only
      allow delete: if isAdmin();
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
